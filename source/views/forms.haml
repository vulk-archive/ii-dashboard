%h1#forms{'data-magellan-destination'=>'forms'} Forms
%form
  .row
    .large-12.columns
      %label
        Input Label
        %input{:placeholder => "large-12.columns", :type => "text"}/
  .row
    .large-4.columns.error
      %label
        Input Label
        %input{:placeholder => "large-4.columns", :type => "text"}
        %small.error Invalid entry
    .large-4.columns
      %label
        Input Label
        %input{:placeholder => "large-4.columns", :type => "text", disabled:'disabled'}
    .large-4.columns
      .row.collapse
        %label Input Label
        .small-9.columns
          %input{:placeholder => "small-9.columns", :type => "text"}/
        .small-3.columns
          %span.postfix .com
  .row
    .large-12.columns
      %label
        Select Box
        %select
          %option{:value => "husker"} Husker
          %option{:value => "starbuck"} Starbuck
          %option{:value => "hotdog"} Hot Dog
          %option{:value => "apollo"} Apollo
  .row
    .large-6.columns
      %label Choose Your Favorite
      %input#pokemonRed{:name => "pokemon", :type => "radio", :value => "Red"}/
      %label{:for => "pokemonRed"} Red
      %input#pokemonBlue{:name => "pokemon", :type => "radio", :value => "Blue"}/
      %label{:for => "pokemonBlue"} Blue
    .large-6.columns
      %label Check these out
      %input#checkbox1{:type => "checkbox"}/
      %label{:for => "checkbox1"} Checkbox 1
      %input#checkbox2{:type => "checkbox"}/
      %label{:for => "checkbox2"} Checkbox 2
  .row
    .large-12.columns
      %label
        Textarea Label
        %textarea{:placeholder => "small-12.columns"}

.row
  .large-4.columns
    %h2 Switch
    .switch.radius
      %input#cbswitch{:name => "cbswitch", :type => "checkbox"}
      %label{:for => "cbswitch"}
  .large-4.columns
    %h2 Slider
    .range-slider{"data-slider" => ""}
      %span.range-slider-handle{:role => "slider", :tabindex => "0"}
      %span.range-slider-active-segment
      %input{:type => "hidden"}/
  .large-4.columns
    %h2 Vertical Slider
    .range-slider.vertical-range{"data-options" => "vertical: true;", "data-slider" => ""}
      %span.range-slider-handle{:role => "slider", :tabindex => "0"}
      %span.range-slider-active-segment
      %input{:type => "hidden"}